@page "/add-user"
@inject HttpClient client
@inject ISnackbar Snackbar

<h2>Přidat uživatele</h2>
<MudPaper Class="pa-4 mb-4">
    <MudForm @ref="form">
        <MudTextField T="string" Label="Jméno a příjemní" Required="true" @bind-Value="tempUser.Name"/>
        <MudTextField T="string" Label="Kancelář" Required="true" @bind-Value="tempUser.Office"/>
        <MudTextField T="string" Label="Odbor" Required="true" @bind-Value="tempUser.Department"/>
        <MudTextField T="string" Label="Email" Required="true" InputType="InputType.Email" @bind-Value="tempUser.Email" />
    </MudForm>
</MudPaper>
<MudPaper Class="pa-4">
    @if (_loading)
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="true">
            <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true" />
            Odesílám
        </MudButton>
    }
    else
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@CreateUser">Uložit</MudButton>        
    }
</MudPaper>


@code {
    private MudForm form;
    private dtUser tempUser = new dtUser();
    private bool _loading = false;    

    private async Task CreateUser()
    {
        _loading = true;
        var result = await client.PostAsJsonAsync<dtUser>("/api/user", tempUser);
        if (result.IsSuccessStatusCode)
        {
            var entity = await result.Content.ReadFromJsonAsync<dtUser>();
            Snackbar.Add($"Byl vytvořený uživatel s ID: {entity.Id}", Severity.Success);
            this.tempUser = new dtUser();
        }
        else
        {
            Snackbar.Add(await result.Content.ReadAsStringAsync(), Severity.Error);
        }
        _loading = false;
    }
}
