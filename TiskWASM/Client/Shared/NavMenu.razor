<MudNavMenu Class="mud-width-full">
    <MudPaper Elevation="0" Class="d-flex flex-column justify-content-center align-items-center mt-4 mb-4 bg-transparent">
        <MudImage Src="logo.png" Height="64" Width="64">

        </MudImage>
        <MudText Typo="Typo.h6" Class="px-4" Color="Color.Default">PRAHA 10</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Tiskárny</MudText>
    </MudPaper>
    <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>    
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AddCircle">Přidat tiskárnu uživateli</MudNavLink>    
    <MudNavLink Href="/list-solution" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ViewList">Záznamy</MudNavLink>
    <MudNavGroup Title="Uživatelé" Icon="@Icons.Material.Filled.Person" Expanded="_usrExpand">
        <MudNavLink Href="/list-user" Icon="@Icons.Material.Filled.People">Zobrazit</MudNavLink>
        <MudNavLink Href="/add-user" Icon="@Icons.Material.Filled.PersonAdd">Přidat</MudNavLink>
        <MudNavLink Href="/import-user" Icon="@Icons.Material.Filled.ImportExport">Hromadný import</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Tiskárny" Icon="@Icons.Material.Filled.Print" Expanded="_prnExpand">
        <MudNavLink Href="/list-printer" Icon="@Icons.Material.Filled.ViewList">Zobrazit tiskárny</MudNavLink>
        <MudNavLink Href="/add-printer" Icon="@Icons.Material.Filled.AddCircle">Přidat tiskárnu</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;
    private bool _prnExpand = false;
    private bool _usrExpand = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
